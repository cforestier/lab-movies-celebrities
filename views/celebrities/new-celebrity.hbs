<h2>Create a new Celebrity</h2>

<form action="/celebrities/create" method="POST">
  <label> Name:
    <input type="text" name="name"/>
  </label>
    <br>
  <label> Occupation:
    <input type="text" name="occupation"/>
  </label>
    <br>
  <label> catchPhrase:
    <textarea type="text" name="catchPhrase" rows="5" cols="33"/></textarea>
  </label>
    <br>
  <button type="submit"> Create the new Celebrity </button>
</form>

<div>
  {{#if message}}
    <p><b>{{message}}</b></p>
  {{/if}}
</div>